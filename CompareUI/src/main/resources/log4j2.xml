<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="logDir">C:/Users/Akshaykumar/eclipse-workspace1/CompareUI/src/main/webapp/logs</Property>
        <Property name="logPattern">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>
    <Appenders>
        <File name="File" fileName="${logDir}/app.log">
            <PatternLayout pattern="${logPattern}"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
